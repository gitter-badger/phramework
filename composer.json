{
    "name": "Phramework/API",
    "description": "PHP SDK for metaphrase service",
    "license": "TBA",
    "type": "library",
    "keywords": [
        "RESTful"
    ],
    "version" : "0.0.4",
    "homepage": "https://nohponex.gr",
    "authors": [
        {
            "name": "Xenophon Spafaridis",
            "email": "nohponex@gmail.com",
            "homepage": "https://nohponex.gr"
        }
    ],
    "autoload": {
        "psr-4": {
            "Phramework\\API\\": "src/API"
        }
    },
    "repositories": [
        { "type": "vcs", "url": "git@github.com:metaphrase/php-sdk.git" }
    ],
    "require": {
        "php": ">=5.5",
        "lib-curl": ">=7.35.0",
        "ext-pdo": ">=1.0.0",
        "ext-pdo_pgsql": ">=1.0.2",
        "ext-json": ">=1.3.6",
        "metaphrase/php-sdk": "0.0.x"
    },
    "require-dev": {
        "phpunit/phpunit": "4.6.*"
    },
    "minimum-stability" : "dev",
    "prefer-stable" : true,
    "archive": {
        "exclude": ["demo", "/*.test"]
    }
}
