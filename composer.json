{
  "name": "Phramework/API",
  "description": "PHP Framework for RESTful services",
  "license": "TBA",
  "type": "library",
  "keywords": [
    "RESTful"
  ],
  "homepage": "https://nohponex.gr",
  "authors": [{
    "name": "Xenophon Spafaridis",
    "email": "nohponex@gmail.com",
    "homepage": "https://nohponex.gr"
  }],
  "autoload": {
    "psr-4": {
      "Phramework\\": "src/Phramework"
    }
  },
  "autoload-dev": {},
  "repositories": [{
    "type": "vcs",
    "url": "git@github.com:metaphrase/php-sdk.git"
  }],
  "require": {
    "php": ">=5.5",
    "lib-curl": ">=7.26.0",
    "ext-pdo": ">=1.0.0",
    "ext-pdo_pgsql": ">=1.0.2",
    "metaphrase/php-sdk": "~0.1"
  },
  "require-dev": {
    "phpunit/phpunit": "4.*",
    "phpunit/phpunit-skeleton-generator": "*",
    "squizlabs/php_codesniffer": "2.*",
    "apigen/apigen": "^4.1"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "archive": {
    "exclude": ["demo/", "examples/", "test/", "/*.test", "tests", "demo.php"]
  },
  "scripts": {
    "test": [
      "echo Phramework test routine",
      "find src/ -name '*.php' -print0 | xargs -0 -L 1 php -l",
      "find examples/ -name '*.php' -print0 | xargs -0 -L 1 php -l",
      "find tests/ -name '*.php' -print0 | xargs -0 -L 1 php -l",
      "phpunit"
    ],
    "lint": "phpcs -p -s --standard=PSR2 ./src",
    "doc": "apigen generate -s ./src -d ./doc --template-theme bootstrap --todo --tree --deprecated --no-source-code --title \"Phramework\""
  }
}
