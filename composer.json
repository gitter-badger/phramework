{
  "name": "phramework/phramework",
  "description": "PHP framework for RESTful services",
  "license": "Apache-2.0",
  "homepage": "https://github.com/phramework",
  "type": "library",
  "keywords": [
    "RESTful"
  ],
  "authors": [{
    "name": "Spafaridis Xenofon",
    "email": "nohponex@gmail.com",
    "homepage": "https://nohponex.gr"
  }],
  "autoload": {
    "psr-4": {
      "Phramework\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Phramework\\Examples\\": "Examples/"
    }
  },
  "repositories": [],
  "require": {
    "php": ">=5.6",
    "ext-json": "*",
    "phramework/exceptions": "^0.0.0",
    "phramework/validate": "^0.0.0"
  },
  "suggest": {
    "ext-curl": "*",
    "ext-pdo": "Required when database is used",
    "ext-pdo_pgsql": "Required when postgreSQL database sql is used",
    "ext-pdo_mysql": "Required when MySQL or MariaDB database is used"
  },
  "require-dev": {
    "phpunit/phpunit": "5.*",
    "phpunit/phpunit-skeleton-generator": "*",
    "squizlabs/php_codesniffer": "*",
    "apigen/apigen": "^4.1",
    "ext-pdo_sqlite": "*",
    "satooshi/php-coveralls": "dev-master"
  },
  "support": {
    "email": "phramework@nohponex.gr"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "archive": {
    "exclude": [
      "*",
      ".*",
      "!/src/*"
    ]
  },
  "scripts": {
    "test": [
      "find src/ -name '*.php' -print0 | xargs -0 -L 1 php -l",
      "find tests/ -name '*.php' -print0 | xargs -0 -L 1 php -l",
      "phpunit"
    ],
    "phpunit": "phpunit",
    "lint": "phpcs -p -s --standard=code-standard.xml ./src",
    "doc": "apigen generate -s ./src -d ./doc --template-theme bootstrap --todo --tree --deprecated --no-source-code --title \"phramework doc\""
  }
}
